<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pinyin_activity_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.memtrip.pinyin.app.EntryActivity">

    <android.support.v7.widget.SearchView
        android:id="@+id/pinyin_activity_searchview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_large_16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        style="@style/Typography.Body1"
        android:id="@+id/pinyin_activity_searchview_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_large_16dp"
        android:gravity="center_horizontal"
        android:text="@string/pinyin_activity_search_hint"
        android:textColor="@color/colorTextInverse"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/pinyin_activity_searchview"
        app:layout_constraintBottom_toBottomOf="@+id/pinyin_activity_searchview"
        app:layout_constraintEnd_toEndOf="parent"/>

    <android.support.design.widget.TabLayout
        style="@style/TabLayout"
        android:id="@+id/pinyin_activity_tablayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_large_16dp"
        android:layout_marginBottom="@dimen/padding_large_16dp"
        android:layout_marginEnd="@dimen/padding_large_16dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pinyin_activity_searchview"
        app:layout_constraintEnd_toEndOf="parent"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/pinyin_activity_viewpager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/padding_large_16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pinyin_activity_tablayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>